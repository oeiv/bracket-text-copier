{
  "manifest_version": 2,
  "name": "Bracket Text Copier",
  "version": "1.0.0",
  "description": "Click on [bracketed text] to copy it instantly",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{a7f3c2e8-91d4-4b6a-8e5f-3c9d7a2b1e0f}",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/utils/logger.js",
        "src/utils/storage.js",
        "src/utils/clipboard.js",
        "src/utils/toast.js",
        "src/utils/theme.js",
        "src/core/BracketDetector.js",
        "src/core/Feedback.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Bracket Text Copier",
    "browser_style": true,
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'"
}